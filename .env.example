# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USER_IDS=

# Letta (default: Letta Cloud - get API key from https://app.letta.com)
LETTA_API_KEY=
# For local server: set LETTA_BASE_URL=http://localhost:8283 and leave LETTA_API_KEY empty
# LETTA_BASE_URL=http://localhost:8283

# Agent Configuration
LETHE_AGENT_NAME=lethe
LETHE_AGENT_MODEL=anthropic/claude-sonnet-4-5-20250929
LETHE_CONFIG_DIR=./config
WORKSPACE_DIR=./workspace

# Hippocampus (memory retrieval subagent)
HIPPOCAMPUS_ENABLED=true
HIPPOCAMPUS_AGENT_NAME=lethe-hippocampus
HIPPOCAMPUS_MODEL=anthropic/claude-haiku-4-5-20251001

# Database
DB_PATH=./data/lethe.db

# Steel Browser (optional - for web automation)
# Local Steel: docker compose -f docker-compose.steel.yml up -d
STEEL_BASE_URL=http://127.0.0.1:3000
# Steel Cloud API key (only needed if using steel.dev cloud, not local Docker)
# STEEL_API_KEY=

# Exa Web Search (optional - for web_search tool)
# Get API key from https://exa.ai
EXA_API_KEY=exa-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
